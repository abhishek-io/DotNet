@model EmployeeCardList.Models.EmployeeModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>


<h4>@ViewBag.StrMsg</h4>
<div class="test">
    <div class="card">
        <img class="card-img-top" src="/avatar6.png" alt="Card image" style="width:100%">
        <div class="container">



            <h4>
                @Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)
            </h4>
            <p>
                @Html.DisplayNameFor(model => model.Department) : @Html.DisplayFor(model => model.Department)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Designation) : @Html.DisplayFor(model => model.Designation)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Phone) :  @Html.DisplayFor(model => model.Phone)
            </p>
            
        </div>
    </div>
</div>

<p style="color:red">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<style>
    .test {
        display: inline-block;
        max-width: 100%;
        overflow-x: hidden;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 350px;
        background-color: deepskyblue;
        margin-bottom: 5px;
        padding: 10px 5px 5px 5px;
    }


        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }


    .container {
        padding: 2px 16px;
        font-weight: bold;
    }
</style>


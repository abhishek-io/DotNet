@model IEnumerable<EmployeeCardList.Models.EmployeeModel>

@{
    ViewBag.Title = "Index";
}

<h2>Employee Cards List</h2>



@using (Html.BeginForm("SearchForEmployee", "EmployeeCardList"))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div style="width:100%">
            <label for=" searchPhrase">Search For the Employee Name, Department, Disignation, Phone</label><br/>
            <input type="text" name="searchPhrase" placeholder="Search Employee" style="width:100%" />
            <input type="submit" value="Search" class="btn" />

        </div>

    </div>
}

<h4>
    @Html.ActionLink("Create New Employee Card", "Create")
</h4>


@foreach (var item in Model)
{
    <div class="test">
        <div class="card">
            <img class="card-img-top" src="/avatar6.png" alt="Card image" style="width:100%">
            <div class="container">



                <h4>
                    @Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(modelItem => item.Name)
                </h4>
                <p>
                    @Html.DisplayNameFor(model => model.Designation) : @Html.DisplayFor(modelItem => item.Designation)
                </p>
                <p>
                    @Html.DisplayNameFor(model => model.Department) : @Html.DisplayFor(modelItem => item.Department)
                </p>
                <p>
                    @Html.DisplayNameFor(model => model.Phone) : @Html.DisplayFor(modelItem => item.Phone)
                </p>
                <p style="color:red">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </p>
            </div>
        </div>
    </div>
}




<style>
    .test {
        display: inline-block;
        max-width: 100%;
        overflow-x: hidden;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 350px;
        background-color: deepskyblue;
        margin-bottom: 5px;
        padding: 10px 5px 5px 5px;
    }


        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }


    .container {
        padding: 2px 16px;
        font-weight: bold;
    }
</style>
